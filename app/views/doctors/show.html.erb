<h1><%= @doctor.name %></h1><br>

# <h3><%= @doctor.department %></h1><br>

    <% @doctor.appointments.each do |appointment| %>
        <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %>, 
        <% @doctor_patient = @doctor.patients.find(appointment.patient_id) %>
        <%= link_to @doctor_patient.name, patient_path(@doctor_patient) %>
        <% end %>
